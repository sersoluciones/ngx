{
  "name": "@sersol/ngx",
  "version": "1.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve -o --ssl --ssl-key localhost.key  --ssl-cert localhost.crt",
    "start-plain": "ng serve -o --host 0.0.0.0",
    "build": "ng build ngx --configuration production",
    "publish-lib": "npm run build && npm publish ./dist --access public && npm run publish-doc && npm run publish-showcase",
    "publish-doc": "npx compodoc -p tsconfig.json -d ../ngx-doc --theme vagrant --language es-ES src",
    "commit": "git --C=../../ngx-doc commit -m 'Auto publish' && git --C=../../ngx-doc push",
    "publish-showcase": "ng deploy showcase --base-href=/ngx/",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e"
  },
  "dependencies": {
    "@angular/animations": "^12.2.1",
    "@angular/cdk": "^12.2.1",
    "@angular/common": "^12.2.1",
    "@angular/compiler": "^12.2.1",
    "@angular/core": "^12.2.1",
    "@angular/forms": "^12.2.1",
    "@angular/material": "^12.2.1",
    "@angular/platform-browser": "^12.2.1",
    "@angular/platform-browser-dynamic": "^12.2.1",
    "@angular/router": "^12.2.1",
    "angular-cli-ghpages": "1.0.0-rc.2",
    "bowser": "^2.11.0",
    "compressorjs": "^1.0.7",
    "highlight.js": "^11.2.0",
    "ngx-highlightjs": "^4.1.4",
    "rxjs": "~6.6.7",
    "tslib": "^2.2.0",
    "tslint": "~6.1.3",
    "zone.js": "~0.11.4"
  },
  "devDependencies": {
    "@angular-devkit/architect": "^0.1202.1",
    "@angular-devkit/build-angular": "^12.2.1",
    "@angular/cli": "^12.2.1",
    "@angular/compiler-cli": "^12.2.1",
    "@angular/language-service": "^12.2.1",
    "@types/highlight.js": "^10.1.0",
    "@types/jasmine": "~3.3.16",
    "@types/jasminewd2": "^2.0.8",
    "@types/node": "^12.20.15",
    "@types/facebook-js-sdk": "^3.3.4",
    "@types/gapi": "0.0.41",
    "@types/gapi.auth2": "0.0.55",
    "codelyzer": "^5.2.2",
    "jasmine-core": "~3.5.0",
    "jasmine-spec-reporter": "~5.0.2",
    "karma": "~6.3.4",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage-istanbul-reporter": "~3.0.2",
    "karma-jasmine": "~4.0.0",
    "karma-jasmine-html-reporter": "^1.5.0",
    "ng-packagr": "^12.0.5",
    "protractor": "~7.0.0",
    "ts-node": "~7.0.1",
    "typescript": "^4.2.3"
  }
}
